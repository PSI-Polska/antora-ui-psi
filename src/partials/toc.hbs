<aside class="sidebar">
  <div class="content">
    <div
      class="toc"
      data-title="{{{detag page.title}}}"
      data-levels="{{{or page.attributes.toclevels 2}}}"
    >
      <div class="toc-menu"></div>
    </div>
    {{#if (and page.fileUri (not env.CI))}}
      <div class="edit-this-page"><a href="{{page.fileUri}}">Edit this Page</a></div>
    {{else if (and
      page.editUrl (or env.FORCE_SHOW_EDIT_PAGE_LINK (not page.origin.private))
    )}}
      <div class="edit-this-page"><a href="{{page.editUrl}}">Edit this Page</a></div>
    {{/if}}
  </div>
</aside>